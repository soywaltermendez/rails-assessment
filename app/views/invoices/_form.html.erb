<%= form_with(model: invoice, local: true) do |form| %>
  <% if invoice.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(invoice.errors.count, "error") %>
        bugs found:
      </h2>
      <ul>
        <% invoice.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="form-group col-sm-12 col-md-6">
      <%= form.label :invoice_uuid, "UUID" %>
      <%= form.text_field :invoice_uuid, class: "form-control", required: true %>
    </div>

    <div class="form-group col-sm-12 col-md-6">
      <%= form.label :cfdi_digital_stamp, "CFDI" %>
      <%= form.text_field :cfdi_digital_stamp, class: "form-control", required: false %>
    </div>

    <div class="form-group col-sm-12 col-md-6">
      <%= form.label :amount_cents, "Amount Cents" %>
      <%= form.text_field :amount_cents, class: "form-control", required: true %>
    </div>

    <div class="form-group col-sm-12 col-md-6">
      <%= form.label :amount_currency, "Amount Currency" %>
      <%= form.text_field :amount_currency, class: "form-control", required: true %>
    </div>

    <div class="form-group col-sm-12 col-md-6">
      <%= form.label :emitter, "Emmiter" %>
      <%= form.text_field :emitter, { class: "form-control", required: true, value: invoice&.emitter&.name } %>
    </div>

    <div class="form-group col-sm-12 col-md-6">
      <%= form.label :receiver, "Receiver" %>
      <%= form.text_field :receiver, { class: "form-control", required: true, value: invoice&.receiver&.name } %>
    </div>

    <div class="form-group col-sm-12 col-md-6">
      <%= form.label :emitted_at, "Emitted Date" %>
      <%= form.date_field :emitted_at, { class: "form-control", required: true } %>
    </div>

    <div class="form-group col-sm-12 col-md-6">
      <%= form.label :expires_at, "Expired Date" %>
      <%= form.date_field :expires_at, { class: "form-control flatpickr", required: true } %>
    </div>
  </div>
  <div class="actions pt-3">
    <%= link_to I18n.t("views.forms.cancel"), root_path, class: "btn btn-secondary" %>
    <%= form.submit I18n.t("views.forms.save"), class: "btn btn-primary" %>
  </div>
<% end %>
