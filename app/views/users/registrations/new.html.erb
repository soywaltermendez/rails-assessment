<div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-login" }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <%= image_tag "logo.svg", height: 72, class: "72" %>
    <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
    <%= f.label :email, "Email address", class: "sr-only", for: "inputEmail" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "inputEmail", placeholder: "Email address", class: "form-control" %>
    <%= f.label :password, "Password", class: "sr-only" %>
    <% if @minimum_password_length %>
      <em>
        (<%= @minimum_password_length %> characters minimum)
      </em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", id: "inputPassword", placeholder: "Password", class: "form-control" %>
    <%= f.label :password_confirmation, "Confirm Password", class: "sr-only" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "inputPassword", placeholder: "Confirm Password", class: "form-control" %>
    <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
    <%= render "users/shared/links" %>
  <% end %>
</div>
